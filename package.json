{
  "name": "what-did-i-do",
  "version": "4.0.0",
  "author": "Nick Alteen <ncalteen@github.com>",
  "description": "A GitHub Action to generate a summary of your GitHub activity.",
  "private": true,
  "type": "module",
  "homepage": "https://github.com/ncalteen/what-did-i-do#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ncalteen/what-did-i-do.git"
  },
  "bugs": {
    "url": "https://github.com/ncalteen/what-did-i-do/issues"
  },
  "engines": {
    "node": ">=21"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "ci-test": "NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 npx jest",
    "coverage": "npx make-coverage-badge --output-path ./badges/coverage.svg",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "lint": "npx eslint .",
    "local-action": "npx local-action . src/main.ts .env",
    "package": "npx rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "test": "NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 npx jest",
    "all": "npm run format:write && npm run lint && npm run test && npm run coverage && npm run package"
  },
  "jest-junit": {
    "outputDirectory": "reports",
    "outputName": "jest-junit.xml"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.0",
    "@actions/glob": "^0.5.0",
    "@actions/io": "^1.1.3",
    "@octokit/plugin-rest-endpoint-methods": "^16.0.0",
    "@octokit/plugin-retry": "^8.0.1",
    "@octokit/plugin-throttling": "^11.0.1",
    "@octokit/rest": "^21.1.1",
    "ajv": "^8.17.1",
    "jsonc": "^2.0.0",
    "mustache": "^4.2.0",
    "openai": "^4.96.2",
    "ts-dedent": "^2.2.0",
    "yaml": "^2.8.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.9",
    "@github/local-action": "^3.2.1",
    "@jest/globals": "^29.7.0",
    "@octokit/graphql": "^9.0.1",
    "@octokit/graphql-schema": "^15.26.0",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/jest": "^29.5.14",
    "@types/mustache": "^4.2.5",
    "@types/node": "^22.15.3",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-import-resolver-typescript": "^4.3.4",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-prettier": "^5.2.6",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.5.3",
    "prettier-eslint": "^16.4.1",
    "rollup": "^4.40.1",
    "ts-jest": "^29.3.2",
    "ts-jest-resolver": "^2.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "*"
  }
}
